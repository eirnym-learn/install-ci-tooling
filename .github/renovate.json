{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "renovate/",
  "bumpVersion": "prerelease",
  "cargo": {
    "rangeStrategy": "bump"
  },
  "configMigration": true,
  "customManagers": [
    {
      "customType": "jsonata",
      "description": "workflows prek",
      "fileFormat": "toml",
      "managerFilePatterns": [
        "/(^|/)\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "*.jobs.*.steps[$contains(uses, \"j178/prek-action\") and with.`prek-version`].{ \"depName\": \"prek\", \"currentValue\": with.`prek-version`, \"datasource\": \"crate\", \"versioning\": \"semver\" }"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "enabled": true,
  "extends": [
    "config:recommended",
    "github>eirnym-learn/act-tooling//.github/renovate-ci-tools.json"
  ],
  "osvVulnerabilityAlerts": true,
  "pre-commit": {
    "enabled": true
  },
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
