{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "renovate/",
  "bumpVersion": "prerelease",
  "cargo": {
    "rangeStrategy": "bump"
  },
  "configMigration": true,
  "customManagers": [
    {
      "customType": "jsonata",
      "description": "workflows prek",
      "fileFormat": "toml",
      "managerFilePatterns": [
        "/(^|/)\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "$map(\n  jobs.*.steps[$match(uses, /^j178/prek-action@.*/)].with.`prek-version`,\n  function($version) {\n    {\n      \"depName\": \"prek\",\n      \"datasource\": \"crate\",\n      \"currentValue\": $version\n    }\n  }\n)"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "enabled": true,
  "extends": [
    "config:recommended",
    "github>eirnym-learn/act-tooling//.github/renovate-ci-tools.json"
  ],
  "osvVulnerabilityAlerts": true,
  "pre-commit": {
    "enabled": true
  },
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
