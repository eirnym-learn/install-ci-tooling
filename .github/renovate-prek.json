{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "jsonata",
      "description": "workflows prek",
      "fileFormat": "toml",
      "managerFilePatterns": [
        "/(^|/)\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "$map(\n  jobs.*.steps[$match(uses, /^j178/prek-action@.*/)].with.`prek-version`,\n  function($version) {\n    {\n      \"depName\": \"prek\",\n      \"datasource\": \"crate\",\n      \"version\": $version\n    }\n  }\n)"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "enabled": true
}
