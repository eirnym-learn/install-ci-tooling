{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "jsonata",
      "description": "workflows prek",
      "fileFormat": "toml",
      "managerFilePatterns": [
        "/(^|/)\\.github/workflows/.*\\.toml$/"
      ],
      "matchStrings": [
        "{\n  \"depName\": \"prek\",\n  \"currentValue\": $.jobs.*.steps[$match(uses, /^j178/prek-action@.*/)].with.`prek-version`\n}"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "enabled": true
}
