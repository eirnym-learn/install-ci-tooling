{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "jsonata",
      "description": "Prek version defined in workflows",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "/(^|/)\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "*.jobs.*.steps[$contains(uses, \"j178/prek-action\") and with.`prek-version`].{ \"depName\": \"prek\", \"currentValue\": with.`prek-version`, \"datasource\": \"crate\", \"versioning\": \"semver\" }"
      ],
      "versioningTemplate": "semver"
    }
  ]
}
